{
    "name": "ble2mqtt-gateway",
    "description": "BLE to MQTT Gateway",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "mqtt-test": "ts-node src/test.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js",
        "start:dev": "ts-node src/index.ts",
        "lint": "eslint src/"
    },
    "keywords": [
        "ruuvitag",
        "iot",
        "bluetooth",
        "ble",
        "low",
        "energy",
        "miflora",
        "mqtt",
        "homeassistant"
    ],
    "author": "Juuso Leinonen",
    "license": "MIT",
    "dependencies": {
        "@abandonware/noble": "1.9.2-21",
        "dotenv": "16.0.3",
        "js-yaml": "4.1.0",
        "lodash": "4.17.21",
        "lodash.snakecase": "4.1.1",
        "luxon": "3.3.0",
        "mqtt": "4.3.7",
        "rxjs": "7.8.1",
        "uuid": "9.0.0",
        "winston": "3.8.2",
        "zod": "3.21.4"
    },
    "devDependencies": {
        "@types/jest": "29.5.1",
        "@types/js-yaml": "4.0.5",
        "@types/lodash": "4.14.194",
        "@types/lodash.snakecase": "4.1.7",
        "@types/luxon": "3.3.0",
        "@types/noble": "0.0.41",
        "@types/node": "18.16.1",
        "@types/uuid": "9.0.1",
        "@types/ws": "8.5.4",
        "@typescript-eslint/eslint-plugin": "5.59.1",
        "@typescript-eslint/parser": "5.59.1",
        "eslint": "8.39.0",
        "eslint-config-prettier": "8.8.0",
        "eslint-plugin-jest": "27.2.1",
        "eslint-plugin-prettier": "4.2.1",
        "jest": "29.5.0",
        "prettier": "2.8.8",
        "ts-jest": "29.1.0",
        "ts-node": "10.9.1",
        "typescript": "5.0.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/src/**/*.test.(ts|js)"
        ],
        "coverageReporters": [
            "text",
            "html"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,ts}",
            "!**/*.{test|d}.{js,ts}"
        ],
        "testEnvironment": "node"
    }
}
