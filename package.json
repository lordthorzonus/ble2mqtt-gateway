{
    "name": "ble2mqtt-gateway",
    "description": "BLE to MQTT Gateway",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "dev": "ts-node --files src/dev.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js",
        "start:dev": "ts-node --files src/index.ts",
        "lint": "eslint src/"
    },
    "keywords": [
        "ruuvitag",
        "iot",
        "bluetooth",
        "ble",
        "low",
        "energy",
        "miflora",
        "mqtt",
        "homeassistant"
    ],
    "author": "Juuso Leinonen",
    "license": "MIT",
    "dependencies": {
        "@abandonware/noble": "1.9.2-26",
        "@effect/platform-node": "0.94.0",
        "dotenv": "17.2.1",
        "effect": "3.17.4",
        "js-yaml": "4.1.0",
        "lodash": "4.17.21",
        "lodash.snakecase": "4.1.1",
        "luxon": "3.7.1",
        "mqtt": "5.14.0",
        "uuid": "11.1.0",
        "winston": "3.17.0",
        "zod": "4.0.14"
    },
    "devDependencies": {
        "@eslint/js": "9.32.0",
        "@types/jest": "30.0.0",
        "@types/js-yaml": "4.0.9",
        "@types/lodash": "4.17.20",
        "@types/lodash.snakecase": "4.1.9",
        "@types/luxon": "3.7.1",
        "@types/noble": "0.0.44",
        "@types/node": "22.17.0",
        "@types/uuid": "10.0.0",
        "@types/ws": "8.18.1",
        "eslint": "9.32.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-jest": "29.0.1",
        "eslint-plugin-prettier": "5.5.3",
        "jest": "30.0.5",
        "prettier": "3.6.2",
        "ts-jest": "29.4.0",
        "ts-node": "10.9.2",
        "typescript": "5.8.3",
        "typescript-eslint": "8.38.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/src/**/*.test.(ts|js)"
        ],
        "coverageReporters": [
            "text",
            "html"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,ts}",
            "!**/*.{test|d}.{js,ts}"
        ],
        "testEnvironment": "node"
    }
}
