{
    "name": "ble2mqtt-gateway",
    "description": "BLE to MQTT Gateway",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "dev": "ts-node --files src/dev.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js",
        "start:dev": "ts-node src/index.ts",
        "lint": "eslint src/"
    },
    "keywords": [
        "ruuvitag",
        "iot",
        "bluetooth",
        "ble",
        "low",
        "energy",
        "miflora",
        "mqtt",
        "homeassistant"
    ],
    "author": "Juuso Leinonen",
    "license": "MIT",
    "dependencies": {
        "@abandonware/noble": "1.9.2-24",
        "dotenv": "16.4.5",
        "js-yaml": "4.1.0",
        "lodash": "4.17.21",
        "lodash.snakecase": "4.1.1",
        "luxon": "3.4.4",
        "mqtt": "5.3.5",
        "rxjs": "7.8.1",
        "uuid": "9.0.1",
        "winston": "3.11.0",
        "zod": "3.22.4"
    },
    "devDependencies": {
        "@types/jest": "29.5.12",
        "@types/js-yaml": "4.0.9",
        "@types/lodash": "4.14.202",
        "@types/lodash.snakecase": "4.1.9",
        "@types/luxon": "3.4.2",
        "@types/noble": "0.0.44",
        "@types/node": "20.11.19",
        "@types/uuid": "9.0.8",
        "@types/ws": "8.5.10",
        "@typescript-eslint/eslint-plugin": "7.0.2",
        "@typescript-eslint/parser": "7.0.2",
        "eslint": "8.56.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-jest": "27.9.0",
        "eslint-plugin-prettier": "5.1.3",
        "jest": "29.7.0",
        "prettier": "3.2.5",
        "ts-jest": "29.1.2",
        "ts-node": "10.9.2",
        "typescript": "5.3.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "<rootDir>/src/**/*.test.(ts|js)"
        ],
        "coverageReporters": [
            "text",
            "html"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,ts}",
            "!**/*.{test|d}.{js,ts}"
        ],
        "testEnvironment": "node"
    }
}
