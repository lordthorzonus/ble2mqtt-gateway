{
  "name": "ble2mqtt-gateway",
  "description": "BLE to MQTT Gateway",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "lint": "eslint src/"
  },
  "keywords": [
    "ruuvitag",
    "iot",
    "bluetooth",
    "ble",
    "low",
    "energy",
    "miflora",
    "mqtt",
    "homeassistant"
  ],
  "author": "Juuso Leinonen",
  "license": "MIT",
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "dotenv": "^16.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "luxon": "^2.3.1",
    "mqtt": "^4.3.7",
    "rxjs": "^7.5.4",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2",
    "uuid": "^8.3.2",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.179",
    "@types/luxon": "^2.3.0",
    "@types/noble": "0.0.40",
    "@types/node": "^16.11.25",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.(ts|js)"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.{test|d}.{js,ts}"
    ],
    "testEnvironment": "node"
  }
}
