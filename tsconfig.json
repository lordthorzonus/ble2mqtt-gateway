{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "noUncheckedIndexedAccess": true,
        "plugins": [
            {
                "name": "@effect/language-service"
            }
        ]
    },
    "exclude": ["dist", "node_modules"],
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
